
<div class="row">
  <div class="col-md-4">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
     
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Team:</strong>
      <%= @user.team %>
    </p>

    <p>
      <strong>Password:</strong>
      <%= @user.password %>
    </p>
  </div>
  <aside class="clearfix">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
        <% if logged_in? %>
          <section class="post_form">
            <%= form_for :posts, url: posts_path do |f| %>
              <div class="form-group">
                <%= f.text_area :content, placeholder: "Compose new post...", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.text_field :question_id, placeholder: "What question is this?", class: "form-control" %>
              </div>
              <div class="center">
                <%= f.submit "Post", class: "btn btn-primary form-control" %>
              </div>
            <% end %>
          </section>
        <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
        <% if @user.posts.any? %>
          <h3>Posts</h3>
          <% @post.each do |post| %>
          <ol class="posts">
            <li id="post-<%= post.id %>">
              <span class="user"><%= link_to post.user.name, '#' %></span>
              <span class="content"><%= post.content %></span>
              <span class="content"><strong><%= post.question_id %></strong></span>
              <span class="team"><%= post.team %></span>
              <span class="timestamp">
              Posted <%= time_ago_in_words(post.created_at) %> ago.
              </span>
            </li>
          </ol>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </aside>
</div>